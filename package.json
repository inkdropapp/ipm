{
  "name": "@inkdropapp/ipm",
  "version": "0.0.3",
  "type": "module",
  "description": "Inkdrop Package Manager",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf lib",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:real-install": "jest tests/real-install.test.ts --testMatch=\"**/tests/real-install.test.ts\"",
    "test:real-outdated": "jest tests/real-get-outdated.test.ts --testMatch=\"**/tests/real-get-outdated.test.ts\"",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "Inkdrop"
  ],
  "author": "Takuya Matsuyama <t@inkdrop.app>",
  "homepage": "https://github.com/inkdropapp/ipm#readme",
  "bugs": {
    "url": "https://github.com/inkdropapp/ipm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/inkdropapp/ipm.git"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@inkdropapp/logger": "^4.0.0",
    "axios": "^1.13.2",
    "semver": "^7.7.3",
    "tar": "^7.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.1",
    "@types/semver": "^7.7.0",
    "@types/tar": "^6.1.13",
    "eslint": "^9.29.0",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
